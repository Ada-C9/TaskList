<h1>Task Lists</h1>
<section class="table">
  <h3>Task</h3>
  <h3>Description</h3>
  <h3>Complete Date</h3>
  <% @tasks.each do |task| %>
      <p> <%= link_to task.title, task_path(task.id) %> </p>
      <p> <%= task.description %> </p>
      <p> <%= task.completion_date %> </p>
      <%= link_to "Delete", task_path(task.id), :data => {:confirm => 'Are you sure?'}, method: :delete %>
  <% end %>
</section>

