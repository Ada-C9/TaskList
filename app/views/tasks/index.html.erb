<h3>Here is your list:</h3>

<ul>
  <% @tasks.each do |task| %>

  <li class="row">
    <%= link_to( task.name, task_path(task))%>:
    <%= task.details %>
    Due by: <%= task.complete %>
    <button>
      <%= link_to("Edit", edit_task_path(task)) %>
    </button>
    <button>
      <%= link_to("Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete Task, #{task.name}?" }) %>
    </button>
    <button>
      <%= link_to('Complete?', task_path(task.id), method: :completed, data: {confirm: "Task is complete?"}) %>
    </button>
  </li>

  <% end %>
</ul>
