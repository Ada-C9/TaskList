<h1>Task List</h1>

<% num = 0 %>
<% num2 = 0 %>

<main>
  <ol class="task-list">
    <li>
      <span class="status" id="incomplete">Incomplete</span>
    </li>
    <% @incomplete.each do |task| %>
    <li>
      <span><% num += 1 %><%= num %><span>.</span><%= link_to task.name, task_path(task.id) %>
    </li>
    <% end %>
  </ol>
  <ol class="task-list">
    <li>
      <span class="status" id="complete">Complete</span>
    </li>
    <% @complete.each do |task| %>
    <li>
      <span><% num2 += 1 %><%= num2 %><span>.</span><%= link_to task.name, task_path(task.id) %>
    </li>
    <% end %>
  </ol>
</main>
