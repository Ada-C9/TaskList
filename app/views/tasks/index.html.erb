
<div class ="box">
  <div>
    <p class = "text">Your tasks:</p>

    <div class="main_page">
      <ol class ="tasklist">
        <%  @tasks.each do |task| %>
        <li>
          <span>
            <% if task.completed %>
            <%= link_to task.name, task_path(task), class: "completed"%>
          </span>

          <% else %>
          <span>
            <%= link_to task.name, task_path(task), class: "incomplete" %>
          </span>
          <%end%>

        </li>
        <div>
          <% if !task.completed %>
          <%= link_to("Mark Complete", completed_task_path(task), method: :patch) %>
          <% else %>
          <%= link_to("Unmark Complete", completed_task_path(task), method: :patch) %>
          <%end%>
          <%= link_to("Show", task_path(task), class: "link") %>
          <%= link_to("Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete Task: #{task.name}?"}, class: "link") %>
          <%end%>
        </div>

      </ol>
    </div>
  </div>
</div>
<div>
