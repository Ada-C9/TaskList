<h2>Task List</h2>


<section>
  <h4>TO DO:</h4>

  <% sorted = Task.sort.reverse %>
  <ul>
    <% sorted.each do |task| %>
    <li>
      <ul>
        <li>
          <strong><%= task.name.capitalize %></strong>
        </li>
        <li>
          <%= task.description %>
        </li>
        <li>
          <%= "Priority: #{task.priority}" %>
        </li>

      </ul>
    </li>
    <% end %>
  </ul>
</section>
