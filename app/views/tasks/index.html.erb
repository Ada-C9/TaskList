<h2>Tasks List</h2>
<ul>
<% @tasks.each do |task| %>
  <li>
      <span class="title">
        <%= link_to task[:title], task_path(task[:id]), class: 'title-link' %>
      </span>
      <span class="edit">
        <%= link_to "Edit", edit_task_path(task[:id]),class: 'edit-link' %></span>
        <span class ="delete"> <%= link_to 'Delete', task_path(task),
              method: :delete,
              data: { confirm: 'This will delete your task. Are you sure?' } %></span>



  </li>
<% end %>
</ul>
