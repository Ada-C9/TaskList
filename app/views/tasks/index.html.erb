<h1>Lovely Luxi's Task List</h1>

<p>How to take care of Mambo and Tango</p>

<ul class="task-list">
  <% @tasks.each do |task| %>
  <li>
    <!-- <input type="checkbox" /> -->
    Due: 
    <em><%= task.date.strftime("%a, %B %d, %Y") %></em>,
    <strong><%= task.time %></strong>
  </li>
  <li>
    Task: <%= link_to(task.to_do, task_path(task)) %>
  </li>
  <li>
    Status: <%= task.status %>
  </li>
  <li>
    <button>
      <% if task.status == "complete" %>

      <%= link_to("Unmark complete", complete_task_path(task.id), method: :patch) %>

      <% else %>

      <%= link_to("Complete", complete_task_path(task.id), method: :patch) %>

      <% end %>
    </button>
    <button>
      <%= link_to("Edit", edit_task_path(task)) %>
    </button>
    <button>
      <%= link_to("Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure you want to delete task? ... Mambo and Tango won't be happy about it." }) %>
    </button>
  </li>
  <% end %>
</ul>

<%= link_to("Add a new task", new_task_path, class: "Something important") %>
