<h2>Here is your list:</h2>

<ul class="list">
  <% @tasks.each do |task| %>
  <li>
      <%= link_to( task.name, task_path(task))%>:
      <%= task.details %>
    <section>
      Scheduled for: <%= task.complete %>
    </section>

    <section class="options">
      <label><button>
          <%= link_to('Completed?', complete_task_path(task.id), method: :patch, data: {confirm: "Task is complete?"}) %></button></label>

      <button>
        <%= link_to("Edit", edit_task_path(task)) %>
      </button>

      <button>
        <%= link_to("Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete Task, #{task.name}?" }) %>
      </button>
    </section>
  </li>

  <% end %>
</ul>
