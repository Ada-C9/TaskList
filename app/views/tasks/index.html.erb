<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <section class="tasks">
      <h2 >Task List</h2>
      <ul class="tasklist">
        <%@tasks.each do |task| %>
        <li>
          <%= link_to task.name.upcase, task_path(task.id) %>: 
          <span class="title">
      <%= task.description %>
      </span>
        </li>
        <%end%>
      </ul>
    </section>
  </body>
</html>
