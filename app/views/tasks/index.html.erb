
<div class ="box">
  <div>
    <p class = "text">Your tasks:</p>

    <div class = "tasks">
      <ol>
        <%  @tasks.each do |task| %>
        <li>
          <strong><%= "#{task[:name]}"%></strong>
        </li>

        <div class ="user-options">
          <% if !task.completed %>
          <%= link_to("Mark Complete", completed_task_path(task), method: :patch, class: "link-complete") %>
          <% else %>
          <%= link_to("Unmark Complete", completed_task_path(task), method: :patch, class: "link") %>
          <%end%>
          <%= link_to("Show", task_path(task), class: "link") %>
          <%= link_to("Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete Task: #{task.name}?"}, class: "link") %>
          <%end%>
        </div>

      </ol>
    </div>
  </div>
</div>
<div>
  <!-- <%= link_to("Add a New Task", new_task_path, class: "important") %> -->
</div>
