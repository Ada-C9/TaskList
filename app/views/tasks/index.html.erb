<h2>Task List</h2>

<ol>
  <% @tasks.each do |task| %>
    <li>
      <strong><%= task.name %></strong>
      <ul>
      <li><%= link_to("See Task Details", task_path(task)) %></li>
      <li><%= link_to("Delete Task", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}) %></li>
    </ul>
    </li>
  <% end %>
</ol>

<%= link_to("Add a New Task", new_task_path) %>
