<h4>TO DO:</h4>

<% sorted = Task.sort.reverse %>

<ul class='list'>
  <li>
  <% sorted.each do |task| %>
    <% if task.status == 'TODO' %>
      <section>
        <p>
          <strong><%= task.name.capitalize %></strong>
        </p>
        <p>
          <%= task.description %>
        </p>
        <p>
          <% priority = "Priority: #{task.priority}" %>
          <% if task.priority == 5 %>
          <span id = 'priority'><%= priority %></span>
          <% elsif task.priority >= 3 && task.priority <= 4 %>
          <span id = 'medium'><%= priority %></span>
          <% else %>
          <span id = 'low'><%= priority %></span>
          <% end %>
        </p>
        <div>
          <p>
            <%= link_to('Mark Complete', task_complete_path(task), method: :patch) %>
          </p>
          <p>
            <%= link_to('Edit', task_path(task)) %>
          </p>
          <p><%= link_to('Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this book?ðŸ˜³'}) %></p>
        <div>
      </section>
    <% end %>
  <% end %>
  <li>
</ul>

<h4> COMPLETED </h4>
<ul class='list'>
  <li>
    <% completed_tasks = Task.where(status: 'COMPLETE') %>
    <% sorted.each do |task| %>
      <% if task.status == 'COMPLETE' %>
        <section>
          <p>
            <strong id='completed-task'><%= task.name.capitalize %></strong>
          </p>
          <p>
            <%= task.description %>
          </p>
          <div>
            <p>
              <%= link_to('Unmark complete', task_complete_path(task), method: :patch) %>
            </p>
            <p>
              <%= link_to('View', task_path(task)) %>
            </p>
            <p>
              <%= link_to('Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this book? ðŸ˜³' }) %>
            </p>
          <div>
        </section>
      <% end %>
    <% end %>
  </li>
</ul>
