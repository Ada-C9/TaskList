<body>

<h1>Lovely Luxi's Task List</h1>

<h4>How to take care of Mambo and Tango</h4>

<ul class="task-list">
  <% @tasks.each do |task| %>
  <li>
    <input type="checkbox">
    Task: <%= link_to(task.to_do, task_path(task)) %>
  </li>
  <li>
    Due:
    <em><%= task.date.strftime("%a, %B %d, %Y") %></em> @
    <strong><%= task.time %></strong>
  </li>
  <li>
    Status: <%= task.status %>
  </li>
  <li>
    Completed date: <%= task.completion_date %>
  </li>
  <li>
    <button class="button-selects">
      <% if task.status == "complete" %>

      <%= link_to("Unmark complete", complete_task_path(task.id), method: :patch) %>

      <% else %>

      <%= link_to("Complete", complete_task_path(task.id), method: :patch) %>

      <% end %>
    </button>
    <button class="button-selects">
      <%= link_to("Edit", edit_task_path(task)) %>
    </button>
    <button class="button-selects">
      <%= link_to("Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure you want to delete this task? ... Mambo and Tango won't be happy about it." }) %>
    </button>
  </li>
  <% end %>
</ul>

<section>
  <%= link_to("Add a new task", new_task_path, class: "Something important") %>
</section>

</body>
