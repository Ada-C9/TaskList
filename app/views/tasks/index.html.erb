<h1>
  Your Tasks&nbsp;<i class="fa fa-check-square-o"></i>
</h1>

<ol>
<% @tasks.each do |task| %>
  <li>
  <strong>
    <%= link_to(task.name.capitalize, task_path(task)) %>
  </strong>
  - <%= task.description %>
  <br>
  <em>
    Complete by <%= task.complete_by %>
  </em>
  <hr>
  </li>
<% end %>
</ol>
