
<h3>Your Tasks</h3>
<ol>
<% @tasks.each do |task| %>
  <li>
    <strong><%= link_to("#{task.name}", task_path(task)) %></strong><br>
    <%= link_to("Mark Complete", complete_task_path(task), method: :patch) %> |
    <%= link_to("Edit", edit_task_path(task)) %> |
    <%= link_to("Delete", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete #{task.name}?" }) %>
  </li>
<% end %>
</ol>
