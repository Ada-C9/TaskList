<section>
<h2 id="hp-header">TaskList</h2>

  <ol>
  <% @tasks.each do |task| %>
    <li>
      <span>
      <% if task.actual_completion_date == nil %>
        <div><%=link_to task[:description], task_path(task[:id]) %></div>
      <% else %>
      <div><%=link_to task[:description], task_path(task[:id]) %></div>
      <%end%>
      <div>
      <%= button_to "Edit", edit_task_path(task.id), method: :get%>
      <%= button_to "Mark Complete", tasks_completed_path(task.id), method: :patch%>
      <%= button_to "Delete", remove_item_path(task.id), method: :delete, data: {confirm: "Are you sure?"}%>
    </div>
    </span>
    </li>
      <%end%>
  </ol>
</section>
