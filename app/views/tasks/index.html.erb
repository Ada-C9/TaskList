<h1>TO DO'S</h1>
<ul>
  <% @tasks.each do |task|%>
  <li>
    <span class="title">
      <%=link_to task.name, task_path(task.id), class: 'title-link' %>
    </span>
  </li>

  <li>
    <% if task.completion_date == nil %>
    <%= link_to "❏ Mark as Completed", mark_complete_path(task.id), method: :patch %>
  </div>
  <% else %>
  ✅Task completed
</div>
<% end %>
</li>
<% end %>
</ul>
