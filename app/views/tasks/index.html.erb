<h1>Task List</h2>
<section class="task-summary">
  <h2 class="list-title">Your Tasks</h2>
  <ol>
    <% @tasks.each do |task| %>
    <li class="task">


      <% if task.date_of_completion == nil %>
        <span class="completed-title">
        <%= link_to task.name, task_path(task.id) %>
        </span><br />

      <% else %>
        <span class="title">
          <%= link_to task.name, task_path(task.id) %>
        </span><br />
      <% end %>

      <span class="task-options">
        <div class="option">
          <%= link_to "See description", task_path(task.id) %>
        </div>

        <% if task.date_of_completion == nil %>
          <div class="option">
              <%= link_to "Edit", edit_task_path(task.id) %>
          </div>
        <% else %>
        <% end %>

        <div class="option">
            <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>

        <% if task.date_of_completion == nil %>
          <div class="option">
              <%= link_to "❏ Mark as Completed", mark_complete_path(task.id), method: :patch %>
          </div>
        <% else %>
          <div class="option">
            ✅Task completed
          </div>
        <% end %>

      </span>
    </li>
    <%end%>
  </ol>
</section>
