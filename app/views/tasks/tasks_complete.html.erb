<ul>
  <% @tasks.each do |task| %>
    <% if task.completion_date != nil %>
      <li class = "name">
         <strong><%= task.name %></strong>
      </li>
      <li class = "sub-list"> Description: <%= task.description
      %></li>
      <li class = "sub-list"> Status: <% "closed"
      %></li>
      <li class = "sub-list"> Priority: <%= nil
      %></li>
      <li class = "sub-list"> Start Date <%= task.start_date
        %></li>

        <li class = "sub-list"> Complete Date <%= task.completion_date
          %></li>

     <%= link_to("Unmark as Complete", uncomplete_task_path(task), method: :patch) %>
      <%= link_to("View", task_path(task.id)) %>
      <%= link_to("Edit", edit_task_path(task)) %>
      <%= link_to("Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete Task #{task.name}?"})%>
     </aside>
     <% end %>
  <% end %>
</ul>
