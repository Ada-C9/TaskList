<main class ="form-box">
  <ul>
    <%= form_for @task do |f| %>

    <li>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>

    <li>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </li>

    <li>
      <%= f.label :completion_date%>
      <%= f.date_field :completion_date%>
    </li>

    <li>
      <%= f.submit "Save!", class:"button" %>
    </li>

    <% end%>
  </ul>
</main>
