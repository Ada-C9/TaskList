<h2><%= page_title %></h2>
<%= form_for @task do |f| %>
  <%= f.label :task_name %>
  <%= f.text_field :task_name %>
  <br>
  <br>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <br>

  <%= f.label :completion_date %>
  <%= f.date_field :completion_date, min: Time.now %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
