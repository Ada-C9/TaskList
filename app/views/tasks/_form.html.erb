<div class="form-style">

  <h2>
    <%= page_title %>
  :</h2>

  <%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :complete_by, "Deadline" %>
    <%= f.date_field :complete_by %>

    <%= f.submit %>

  <% end %>
</div>
