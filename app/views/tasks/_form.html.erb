<h1 class="form"> <%= page_title %></h1>

<section class="new-task">
  <%= form_for @task do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %><br /><br />

    <%= f.label :description %>:
    <%= f.text_area :description %><br /><br />

    <%= f.label :due_date %>:
    <%= f.text_field :due_date %><br /><br />

    <%= f.label :status %>:
    <%= f.select :status, [["Incomplete"], ["Complete"]], {}, {class: "form-control"} %><br /><br />

    <input type="submit" name="commit" value="Submit" data-disable-with="Submit">

  <% end %>
</section>
