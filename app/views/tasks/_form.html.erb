<h3> <%= page_title %> </h3>

<% if @task.errors.any? %>
  <ul class='errors'>
    <% @task.errors.each do |attribute, msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br><br>
  <%= f.label :priority %>
  <%= f.number_field :priority %>
  <br><br>
  <%= f.label :completion_date %>
  <%= f.date_field :completion_date %>
  <br><br>
  <%= f.submit action_name %>

<% end %>
