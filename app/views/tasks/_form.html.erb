<h2><%=page_title %></h2>

<div class = "form">
  <%= form_for @task do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
<p>
  <%= f.label :owner %>
  <%= f.text_field :owner %>
<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
<p>
  <%= f.label :complete %>
  <%= f.check_box :complete %>
<p>
  <%= f.label :date_complete %>
  <%= f.text_field :date_complete %>
<p>
  <%= f.submit  %>
  <% end %>
</div>
