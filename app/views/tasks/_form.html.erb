<main class=main>
  <ul class=edit_page>
    <%= form_for @task do |f| %>
    <li><%= f.label :name, :class => "attributes"%>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </li>
    <li>
      <%= f.label :priority %>
      <%= f.text_field :priority %>
    </li>
    <li>
      <%= f.label :due_date %>
      <%= f.date_field :due_date %>
    </li>
    <li>
      <%= f.label :status %>
      <%= f.text_field :status %>
    </li>
    <li>
      <%= f.submit "Post Task", :class => "button_style" %>
    </li>
    <% end %>
  </ul>
</main>
