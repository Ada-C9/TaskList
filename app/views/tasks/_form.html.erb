<!-- Creates a generic form for task -->
<h2 class='basic-form'><%= page_title %></h2>
<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :status %>
  <%= f.text_field :status %>
  <br>
  <%= f.label :due %>
  <%= f.date_field :due %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.submit %>
<% end %>
