<header>
  <h2><%= action_name.titleize %></h2>
</header>

<main>
  <%= form_for @task do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.label :deadline %>
      <%= f.date_field :deadline %>
    </div>

    <div>
      <%= f.submit action_name %>
    </div>
  <% end %>
</main>
