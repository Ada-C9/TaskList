<h2 class = "my-class"><%= page_title %></h2>

<% if @task.errors.any? %>
<ul class="errors">
  <% @task.errors.each do |field, message| %>
  <li>
    <strong><%= field.capitalize %></strong> <%= message %>
  </li>
  <% end %>
</ul>
<% end %>

<%= form_for @task do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.label :completion_date %>
<%= f.text_field :completion_date %>
<%= f.submit%>
<% end %>
