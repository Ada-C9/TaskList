<h2><%= @task.name %></h2>
<p><%= @task.description %></p>
<p>Priority:
  <% if @task.priority == 1 %>
    <span>High</span>
  <% elsif @task.priority == 2 %>
    <span>Mid</span>
  <% elsif @task.priority == 3 %>
    <span>Low</span>
  <% end %>
</p>
<h4>
  <% if @task.completed %>
    Completion Date: <%= @task.completion_date %>
  <% else %>
    Not Completed
  <% end %>
</h4>

<%= link_to "edit", edit_task_path %>
<%= link_to "delete", task_path(@task.id), method: :delete %>
