<section class="show_page">
  <h2 class="name_header"><%= @task.name %><h2>
  <h3 class="completion_date_header"><%= @task.completion_date %><h3>
  <h4 class="description_text"><%= @task.description %></h4>
</section>

<ul>
  <li>
  <%= link_to "Edit", edit_task_path %>
</li>
  <li>
    <%= link_to "Delete", task_path(@task.id), method: :delete, data: { confirm: 'Are you sure you want to delete this task?'} %>
  </li>
</ul>

