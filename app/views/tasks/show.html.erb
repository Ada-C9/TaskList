<h3>
  <%= @task.name %>
</h3>

<ul>
  <li>
    Description: <br><%= @task.description %>
  </li>
  <li>
    Priority: <%= @task.priority %>
  </li>
  <li>
    <% if @task.completion_date.nil? %>
      Completion date: Not yet completed
    <% else %>
      Completion Date: <%= @task.completion_date %>
    <% end %>
  </li>
</ul>

<%= link_to('Edit', edit_task_path(@task)) %>
