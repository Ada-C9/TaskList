<section class="task_content">
  <h2 class="page_title"> <%= @task.title %> </h2>
  <p><strong>Description:</strong> <%= @task.description %></p>
  <p><strong>Completion Date:</strong>
    <% if @task.completion_date %>
      <%= Date.parse(@task.completion_date) %>
    <% end %>
  </p>
  <ul class="operations">
    <li>
      🖌<%= link_to "Edit", edit_task_path(@task.id) %>
    </li>
    <li>
      <% if @task.is_complete? %>
        ✅<%= link_to "Unmark Complete", task_path(@task.id), method: :put %>
      <% else %>
        ☑️<%= link_to "Mark Complete", task_path(@task.id), method: :put %>
      <% end %>
    </li>
    <li>
      ❎<%= link_to "Delete", task_path(@task.id), :data => {:confirm => 'Are you sure?'}, method: :delete %>
    </li>
  </ul>
</section>
