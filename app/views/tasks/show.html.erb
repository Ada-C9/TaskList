<section class="show-task">
  <h1 class="task-title"><%= @tasks.task_name %></h1>
  <p class="task-description">
    <%= @tasks.description %>
  </p>

  <ul class="task-options">
    <li>
      <a><%= link_to "Edit", edit_task_path %></a>
    </li>
    <li>
      <a><%= link_to "Delete", tasks_path(@tasks.id), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></a>
    </li>
    <!-- <li> <%= link_to "Mark Complete", edit_task_path %> </li> -->
  </ul>
</section>
