<section class="task-details">
  <div class="header">Task Details</div>
  <div class="subheader"><%= @task.name %></div>
  <ul class="task info">
    <li>Due:  <%= @task.due %></li>
    <li>Status: <%= @task.status %></li>
    <li>Description: <%= @task.description %></li>
  </ul>
</section>

<section class="task-options">
  <h2>Options</h2>
  <ul>
    <li><%= button_to "📝 Edit", edit_task_path(@task.id), method: :get %></li>
    <li><%= link_to "❌ Delete", task_path(@task.id), method: :delete,
      data: { confirm: 'Are you sure?' } %></li>
  </ul>
</section>
