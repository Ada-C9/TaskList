<section class="show-task">
  <h1 class="task-title"><%= @task.task_name %></h1>
  <p class="task-description">
    <%= @task.description %>
  </p>

  <ul class="task-options">
    <li>
      <%= link_to "Edit", edit_task_path %>
    </li>
    <li>
      <%= link_to "Mark Complete", mark_complete_path %>
    </li>
    <li>
      <%= link_to "Delete", task_path(@task.id), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>
    </li>
  </ul>
</section>
