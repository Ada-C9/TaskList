<section class="details">
  <section class="sidebar">
    <nav>
      <ul>
        <li>
          <a><%= link_to "Add Task", new_task_path %></a>
        </li>
        <li>
          <a><%= link_to "All Tasks", all_tasks_path %></a>
        </li>
        <li>
          <a><%= link_to "Home", tasks_path %></a>
        </li>
      </ul>
    </nav>
  </section>
  <section class="item">
    <h2><%=@task.title %></h2>
    <p>
      Description:
      <%= @task.description %>
    </p>
    <p>
      Location:
      <%= @task.location %>
    </p>
    <p>
      Priority:
      <% if @task.priority == 1%>
      High
      <%elsif @task.priority == 2 %>
      Medium
      <%elsif @task.priority == 3 %>
      Low
      <%elsif @task.priority == 4 %>
      FINISHED
      <% end %>
    </p>
    <p>
      Status:
      <% if @task.done == true %>
      <%= "COMPLETED on " + @task.complete_date.to_s %>
      <% else %>
      Incomplete
      <p>
        ---------------------------
      </p>
      <% end %>
    </p>

    <p>
      <% if @task.done != true %>
      <%= link_to "Edit", edit_task_path %>
      |
      <%= link_to "All Tasks", all_tasks_path %>
      |
      <%= link_to "Complete", completed_task_path(@task.id), method: :patch %>
      |
      <%= link_to "ðŸ—‘", task_path(@task.id), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
      <% end %>
    </p>
  </section>
</section>
