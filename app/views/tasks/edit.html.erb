    <h2>Update a new task</h2>
    <%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :completion_date %>
    <%= f.text_area :completion_date %>
    <%= f.submit "Update"%>
    <% end %>
