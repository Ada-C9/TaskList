<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :description%>
  <%= f.text_field :description%>

  <%= f.label :completion_date%>
  <%= f.date_field :completion_date%>

  <%= f.submit "Edit Task" %>
<% end %>
