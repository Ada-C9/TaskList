<main class=main>
  <ul>
    <%= form_for @task do |f| %>
    <li><%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </li>
    <li>
      <%= f.label :priority %>
      <%= f.text_field :priority %>
    </li>
    <li>
      <%= f.label :due_date %>
      <%= f.date_field :due_date %>
    </li>
    <li>
      <%= f.label :status %>
      <%= f.text_field :status %>
    </li>
    <li>
      <%= f.submit "Update Task", class: "button"%>
    </li>
    <% end %>
  </ul>
</main>
