<%=form_for @task do |f| %>

<%= f.label :name%>
<%= f.text_field :name%>


<%= f.label :completion_date, 'Predicted Completion Date' %>
<%= f.text_field :completion_date%>

<%= f.label :actual_completion_date, 'Task Completed on' %>
<%= f.text_field :actual_completion_date%>

<%= f.label :description%>
<%= f.text_field :description%>
<%= f.submit%>
<%end%>
