<div class="form-style">

  <h2>Create a new task for your to-do list:</h2>

  <%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :complete_by %>
    <%= f.date_field :complete_by %>

    <%= f.submit "Add Task" %>

  <% end %>

</div>

