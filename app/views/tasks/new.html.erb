<h1>Create a New Task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completion_date %>
  <%= f.date_field :completion_date %>

  <%= f.submit %>
<% end %>

