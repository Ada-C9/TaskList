<h2>Create a New Task</h2>

  <%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.submit %>
  <% end %>





