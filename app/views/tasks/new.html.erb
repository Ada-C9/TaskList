<section class="add_task">
  <section class="sidebar">
    <nav>
      <ul>
        <li>
          <a><%= link_to "Add Task", new_task_path %></a>
        </li>
        <li>
          <a><%= link_to "All Tasks", all_tasks_path %></a>
        </li>
        <li>
          <a><%= link_to "Home", tasks_path %></a>
        </li>
      </ul>
    </nav>
  </section>
  <section class="form">
    <h2>üç¶ Add a Task! üç¶</h2>
    <%= form_for @task do |f| %>
    <%= f.label :title %>:
    <%= f.text_field :title %><br/><br/>

    <article>
      <%= f.label :description %>:
      <%= f.text_area :description %>
    </article>
    <br/>
    <%= f.label :Location %>:
    <%= f.text_field :location %>
    <br/><br/>
    <article>
      <span>
        Priority:
      </span>
      <span>
        <a><%= f.label :high_priority, 'High' %></a>
        <%= f.radio_button :priority, 1 %><br/>

        <a><%= f.label :med_priority, 'Medium' %></a>
        <%= f.radio_button :priority, 2 %><br/>

        <a><%= f.label :low_priority, 'Low' %></a>
        <%= f.radio_button :priority, 3 %>
      </span>
    </article>
    <br/>
    <%= f.submit %><br/><br/>
  <% end %>
</section>
</section>
