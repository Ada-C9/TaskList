<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

<h1>Add some Todos!</h1>
  <label for="todo">Todo</label>
  <input type="text" name="todo" value="" id="todo">

  <label for="add_description_to_task">Description of Task</label>
  <input type="text" name="add_description_to_task" value="" id="add_description_to_task">

  <label for="due_date">Do it by:</label>
  <input type="date" name="due_date" value="" id="due_date">

  <input type="submit" value="Submit">
</form>


<%= link_to "Home", tasks_index_path %>
