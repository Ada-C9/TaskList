<form action="/tasks" method="post" accept-charset="utf-8">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

<h4>
  <% page_title ||= "Unique page stuffs" %>
  <%= page_title %>
</h4>

<%= form_for @task do |f| %>
  <% f.label :name %>
  <% f.text_field :name %>

  <% f.label :description %>
  <% f.text_field :description %>

  <% f.label :completion_date %>
  <% f.date_field :completion_date %>

  <%= f.submit page_title %>
<% end %>
