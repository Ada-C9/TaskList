<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <label for "name">Name</label>
  <input type="text" name="name" value="" id="name" />

  <label for "description">Description</label>
  <textarea name="description" value="" id="description"></textarea>

  <label for "completion_date">Completion Date</label>
  <input type="date" name="completion_date" value="" id="completion_date" />

  <input type="submit" value="Create Task" />

</form>
