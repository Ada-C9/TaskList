<h3>Add a new task</h3>

<%= form_for @task do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br><br>
  <%= f.label :priority %>
  <%= f.number_field :priority %>
  <br><br>
  <%= f.label :completion_date %>
  <%= f.date_field :completion_date %>
  <br><br>
  <%= f.submit %>

<% end %>
