/********** global **********/
h1, h4 {
  font-family: 'Reenie Beanie', cursive;
}


ul {
  text-align: center;
  list-style-type: none;
  padding: 0;
}

a {
  text-decoration: none;
}

a:hover {
  color: #003459;
}

li {
  font-family: 'Lakki Reddy', cursive;
  font-size: 1.4em;
  font-weight: bold;
  color: #CE7DA5;
}

.title {
  font-family: 'Reenie Beanie', cursive;
  font-size: 2em;
  margin: 0;
}

/********** layout **********/
body {
  color: #003459;
  background-image: url(/assets/background.jpg);
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

  height: 100%;
  width: 100%;
  padding: 40px 0;

  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
}

.main {
  min-height: 700px;
  min-width: 800px;
  /* border: 2px white solid; */
  background-color: rgba(239, 235, 206, 0.7);

  display: grid;
  grid-template-columns: 1fr 2fr;
}

/********** footer **********/
h1 {
  font-size: 50px;
}

/********** nav **********/
nav {
  grid-column: 1 / 2;
  height: 100%;
  justify-content: center;
}

nav ul {
  height: 20%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
}

nav a {
  margin: 10px;
  text-decoration: underline;
  font-size: 1.2em;
  height: 60px;
}

/********** task list **********/
.table {
  padding: 20px;
  grid-column: 2 / 3;
  display: flex;
  flex-flow: column;
  justify-content: flex-start;
  align-items: left;
}

.title a {
  padding: 20px;
  font-size: 1.2em;
}

.table ul {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
}

.table ul li {
  text-align: left;
}

.table ul li a {
  margin: 0 30px 0 10px;
  /* margin-right: 30px; */
  text-decoration: underline;
  font-size: 0.9em;
}

/********** footer **********/
h4 {
  font-size: 1.4em;
}
